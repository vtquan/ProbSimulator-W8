<common:LayoutAwarePage
    x:Name="pageRoot"
    x:Class="Probability_Simulator.Pages.RPG.AxalfFightPage"
    DataContext="{Binding DefaultViewModel, RelativeSource={RelativeSource Self}}"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Probability_Simulator.Pages.RPG"
    xmlns:common="using:Probability_Simulator.Common"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>

        <!-- TODO: Delete this line if the key AppName is declared in App.xaml -->
        <x:String x:Key="PageName">Dire Diminutive Drawf: Axalf</x:String>
        <Storyboard x:Name="IdleAnimation" RepeatBehavior="Forever">
        	<DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Projection).(PlaneProjection.GlobalOffsetX)" Storyboard.TargetName="viewbox">
        		<EasingDoubleKeyFrame KeyTime="0" Value="0"/>
        		<EasingDoubleKeyFrame KeyTime="0:0:1" Value="20"/>
        		<EasingDoubleKeyFrame KeyTime="0:0:2" Value="0"/>
        		<EasingDoubleKeyFrame KeyTime="0:0:3" Value="-20"/>
        		<EasingDoubleKeyFrame KeyTime="0:0:4" Value="0"/>
        	</DoubleAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Name="FlinchAnimation">
        	<DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Projection).(PlaneProjection.GlobalOffsetX)" Storyboard.TargetName="viewbox">
        		<EasingDoubleKeyFrame KeyTime="0" Value="0"/>
        		<EasingDoubleKeyFrame KeyTime="0:0:0.2" Value="15"/>
        		<EasingDoubleKeyFrame KeyTime="0:0:0.5" Value="0"/>
        	</DoubleAnimationUsingKeyFrames>
        	<DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Projection).(PlaneProjection.GlobalOffsetY)" Storyboard.TargetName="viewbox">
        		<EasingDoubleKeyFrame KeyTime="0" Value="0"/>
        		<EasingDoubleKeyFrame KeyTime="0:0:0.2" Value="-15"/>
        		<EasingDoubleKeyFrame KeyTime="0:0:0.5" Value="0"/>
        	</DoubleAnimationUsingKeyFrames>
        </Storyboard>
        
    </Page.Resources>

    <!--
        This grid acts as a root panel for the page that defines two rows:
        * Row 0 contains the back button and page title
        * Row 1 contains the rest of the page layout
    -->

    <Page.BottomAppBar>
        <AppBar x:Name="bottomAppBar" Padding="10,0,10,0">
            <Grid>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button x:ConnectionId='1' Style="{StaticResource RestartAppBarButtonStyle}"                       />
                    <Button x:ConnectionId='2' Style="{StaticResource VolumeAppBarButtonStyle}"                     />
                    <!--<Button Style="{StaticResource PlayAppBarButtonStyle}" Click="PlayB_Click"/>-->
                </StackPanel>
            </Grid>
        </AppBar>
    </Page.BottomAppBar>
    <Grid Style="{StaticResource LayoutRootStyle}">
        <Grid.RowDefinitions>
            <RowDefinition Height="140"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Back button and page title -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button x:ConnectionId='8' x:Name="backButton"                IsEnabled="{Binding Frame.CanGoBack, ElementName=pageRoot}" Style="{StaticResource BackButtonStyle}"/>
            <TextBlock x:Name="pageTitle" Grid.Column="1" Text="{StaticResource PageName}" Style="{StaticResource PageHeaderTextStyle}"/>
        </Grid>

        <Grid Grid.Row="1">
            <Grid HorizontalAlignment="Left" Height="100" VerticalAlignment="Top" Width="250" Margin="0">
                <TextBlock x:Name="yourName" TextWrapping="Wrap" VerticalAlignment="Top" TextAlignment="Center" FontFamily="Segoe UI" FontSize="24"/>
                <TextBlock x:Name="yourHPLabel" TextWrapping="Wrap" Text="Health" VerticalAlignment="Top" Margin="0,37,0,0" FontSize="20" HorizontalAlignment="Left" TextAlignment="Right"/>
                <Rectangle x:Name="yourHPBar" HorizontalAlignment="Left" Height="24" Stroke="Black" VerticalAlignment="Top" Width="177" Margin="63,37,0,0" Fill="Red"/>
                <TextBlock x:Name="yourHPText" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Margin="63,37,0,0" Height="24" Width="177" Foreground="White" TextAlignment="Center" FontSize="20"/>
                <TextBlock x:Name="yourMPLabel" TextWrapping="Wrap" Text="Mana" VerticalAlignment="Top" Margin="0,66,0,0" FontSize="20" HorizontalAlignment="Left" TextAlignment="Right"/>
                <TextBlock x:Name="yourMPText" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Margin="63,66,0,0" Height="24" Width="177" TextAlignment="Center" FontSize="20" Foreground="White"/>
                <Rectangle x:Name="yourMPBar" HorizontalAlignment="Left" Height="24" Stroke="Black" VerticalAlignment="Top" Width="177" Margin="63,66,0,0" Fill="#FF2EFF00"/>
            </Grid>
            <Grid HorizontalAlignment="Right" Height="100" VerticalAlignment="Top" Width="250">
                <TextBlock x:Name="monsterName" TextWrapping="Wrap" VerticalAlignment="Top" TextAlignment="Center" FontFamily="Segoe UI" FontSize="24"/>
                <TextBlock x:Name="monsterHPLabel" TextWrapping="Wrap" Text="Health" VerticalAlignment="Top" Margin="10,37,0,0" FontSize="20" HorizontalAlignment="Left" TextAlignment="Right"/>
                <Rectangle x:Name="monsterHPBar" HorizontalAlignment="Right" Height="24" Stroke="Black" VerticalAlignment="Top" Width="177" Margin="0,37,0,0" Fill="Red"/>
                <TextBlock x:Name="monsterHPText" HorizontalAlignment="Right" TextWrapping="Wrap" VerticalAlignment="Top" Margin="0,37,0,0" Height="24" Width="177" TextAlignment="Center" FontSize="20" Foreground="White"/>
                <TextBlock x:Name="monsterMPLabel" TextWrapping="Wrap" Text="Mana" VerticalAlignment="Top" Margin="10,66,0,0" FontSize="20" HorizontalAlignment="Left" TextAlignment="Right"/>
                <Rectangle x:Name="monsterMPBar" HorizontalAlignment="Right" Height="24" Stroke="Black" VerticalAlignment="Top" Width="177" Margin="0,66,0,0" Fill="#FF2EFF00"/>
                <TextBlock x:Name="monsterMPText" HorizontalAlignment="Right" TextWrapping="Wrap" VerticalAlignment="Top" Margin="0,66,0,0" Height="24" Width="177" TextAlignment="Center" FontSize="20" Foreground="White"/>
            </Grid>
            <Grid Height="237" VerticalAlignment="Bottom" Margin="0">
                <TextBlock x:Name="ActionLogLabel" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Action Log" VerticalAlignment="Top"/>
                <ScrollViewer x:Name="ActionLogScroll" Margin="0,17,346,0" BorderThickness="1" BorderBrush="White">
                    <StackPanel x:Name="ActionLogList"/>
                </ScrollViewer>
                <Button x:ConnectionId='3' x:Name="AttackB" Content="Attack" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,0,180" Height="40" Width="346"                      />
                <Button x:ConnectionId='4' x:Name="SpellB" Content="Spell" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,0,135" Height="40" Width="346"                     />
                <Button x:ConnectionId='5' x:Name="DefendB" Content="Defend" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,0,90" Height="40" Width="346"                      />
                <Button x:ConnectionId='6' x:Name="ItemB" Content="Item" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,0,45" Height="40" Width="346"                    />
                <Button x:ConnectionId='7' x:Name="FleeB" Content="Flee" HorizontalAlignment="Right" VerticalAlignment="Bottom" Height="40" Width="350" Margin="0,0,-4,0"                    />
            </Grid>
            <Viewbox x:Name="viewbox" Height="350" VerticalAlignment="Top" Width="350" Margin="0,10,0,0">
            	<Viewbox.Projection>
            		<PlaneProjection/>
            	</Viewbox.Projection>
                <Image x:Name="Axalf" Source="ms-appx:///Assets/Monster.png"/>
            </Viewbox>
            <MediaElement x:Name="BackgroundMusic" HorizontalAlignment="Left" Height="100" VerticalAlignment="Top" Width="100" Margin="1266,149,0,0" Source="ms-appx:///Assets/Music/Chrono Trigger Music - Battle Theme.mp3" IsLooping="True"/>
        </Grid>

        <VisualStateManager.VisualStateGroups>

            <!-- Visual states reflect the application's view state -->
            <VisualStateGroup x:Name="ApplicationViewStates">
                <VisualState x:Name="FullScreenLandscape"/>
                <VisualState x:Name="Filled"/>

                <!-- The entire page respects the narrower 100-pixel margin convention for portrait -->
                <VisualState x:Name="FullScreenPortrait">
                    <Storyboard>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="backButton" Storyboard.TargetProperty="Style">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource PortraitBackButtonStyle}"/>
                        </ObjectAnimationUsingKeyFrames>
                    </Storyboard>
                </VisualState>

                <!-- The back button and title have different styles when snapped -->
                <VisualState x:Name="Snapped">
                    <Storyboard>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="backButton" Storyboard.TargetProperty="Style">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource SnappedBackButtonStyle}"/>
                        </ObjectAnimationUsingKeyFrames>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="pageTitle" Storyboard.TargetProperty="Style">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource SnappedPageHeaderTextStyle}"/>
                        </ObjectAnimationUsingKeyFrames>
                    </Storyboard>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
    </Grid>
</common:LayoutAwarePage>


            </Grid>
            <Button x:Name="DiceRollB" Content="Roll" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="120,0,0,40" Height="60" Width="360" FontSize="26.667" Click="DiceRollB_Click" Grid.RowSpan="2"/>

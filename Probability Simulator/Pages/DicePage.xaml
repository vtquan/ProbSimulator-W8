            			<TextBox x:Name="_8Box" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Margin="29,420,0,0" HorizontalAlignment="Left" Width="64" Height="32" IsReadOnly="True" TextAlignment="Right" Grid.ColumnSpan="2"/>
            			<TextBox x:Name="_9Box" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Margin="29,480,0,0" HorizontalAlignment="Left" Width="64" Height="32" IsReadOnly="True" TextAlignment="Right" Grid.ColumnSpan="2"/>

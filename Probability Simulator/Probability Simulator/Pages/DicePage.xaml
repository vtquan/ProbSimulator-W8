    	    <TextBox x:Name="_16Box" HorizontalAlignment="Right" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Margin="0,441,508,0" Height="32" IsReadOnly="True"/>
    	    <TextBox x:Name="_17Box" HorizontalAlignment="Right" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Margin="0,501,508,0" Height="2" IsReadOnly="True"/>

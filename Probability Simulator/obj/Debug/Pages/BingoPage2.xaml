<common:LayoutAwarePage
    x:Name="pageRoot"
    x:Class="Probability_Simulator.BingoPage"
    DataContext="{Binding DefaultViewModel, RelativeSource={RelativeSource Self}}"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Probability_Simulator"
    xmlns:common="using:Probability_Simulator.Common"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>

        <!-- TODO: Delete this line if the key AppName is declared in App.xaml -->
        <x:String x:Key="PageName">Bingo Draw</x:String>
    </Page.Resources>

    <!--
        This grid acts as a root panel for the page that defines two rows:
        * Row 0 contains the back button and page title
        * Row 1 contains the rest of the page layout
    -->
    <Grid Style="{StaticResource LayoutRootStyle}">
        <Grid.RowDefinitions>
            <RowDefinition Height="140"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Back button and page title -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button x:ConnectionId='2' x:Name="backButton"                IsEnabled="{Binding Frame.CanGoBack, ElementName=pageRoot}" Style="{StaticResource BackButtonStyle}"/>
            <TextBlock x:Name="pageTitle" Grid.Column="1" Text="{StaticResource PageName}" Style="{StaticResource PageHeaderTextStyle}"/>
        </Grid>
        <Grid x:Name="grid" Grid.Row="1">
        	<MediaElement x:Name="coinSound" HorizontalAlignment="Left" Height="100" VerticalAlignment="Top" Width="100" Margin="1266,0,0,0" AudioCategory="SoundEffects" RealTimePlayback="True" Source="ms-appx:///Assets/Sound Effect/coin_flip.wav" AutoPlay="False"/>

        	<Grid x:Name="inputGrid" Margin="120,482,0,105" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Left" Width="360" VerticalAlignment="Bottom">
        		<Grid.RenderTransform>
        			<CompositeTransform/>
        		</Grid.RenderTransform>
        		<TextBlock x:Name="textBlock" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Number of Calls" FontSize="24" Width="196" Height="32" VerticalAlignment="Bottom"/>
        		<TextBox x:Name="numCoinBox" TextWrapping="Wrap" Text="1" TextAlignment="Center" FontSize="16" Height="32" VerticalAlignment="Bottom" InputScope="Number" HorizontalAlignment="Right" Width="164"/>
        	</Grid>
        	<Button x:ConnectionId='1' x:Name="callB" Content="Call" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="120,0,0,40" Height="60" Width="360" FontSize="26.667"                    />
        	<Grid x:Name="historyGrid" Margin="0,0,120,40" Width="300" HorizontalAlignment="Right">
            
        		<TextBlock x:Name="historyListLabel" TextWrapping="Wrap" Text="History List" VerticalAlignment="Top" Margin="0,0,221,0" Height="14" HorizontalAlignment="Right" Width="79"/>
        		<ScrollViewer x:Name="historyScroll" Margin="0,19,0,0" HorizontalAlignment="Right" Width="300" BorderBrush="White" BorderThickness="1" RenderTransformOrigin="0.5,0.5">
        			<ScrollViewer.RenderTransform>
        				<CompositeTransform/>
        			</ScrollViewer.RenderTransform>
        			<StackPanel x:Name="historyList" HorizontalAlignment="Left" VerticalAlignment="Top" Width="300"/>
        		</ScrollViewer>
        	</Grid>
        	<Viewbox HorizontalAlignment="Left" Height="435" VerticalAlignment="Top" Width="360" Margin="120,5,0,0">
        		<Border BorderBrush="White" BorderThickness="1" Background="Black">
        			<Grid ScrollViewer.VerticalScrollBarVisibility="Disabled" Margin="0" Background="#FF4F4F4F">
        				<Grid.ColumnDefinitions>
        					<ColumnDefinition Width="50"/>
        					<ColumnDefinition Width="50"/>
        					<ColumnDefinition Width="50"/>
        					<ColumnDefinition Width="50"/>
        					<ColumnDefinition Width="50"/>
        				</Grid.ColumnDefinitions>
        				<Grid.RowDefinitions>
        					<RowDefinition Height="50"/>
        					<RowDefinition Height="50"/>
        					<RowDefinition Height="50"/>
        					<RowDefinition Height="50"/>
        					<RowDefinition Height="50"/>
        					<RowDefinition Height="50"/>
        					<RowDefinition/>
        				</Grid.RowDefinitions>
        				<Border BorderBrush="White" BorderThickness="1" Background="Red">
        					<Viewbox Margin="0">
        						<TextBlock x:Name="textBlock1" TextWrapping="Wrap" Text="B" TextAlignment="Center" FontFamily="Segoe WP Black" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        					</Viewbox>
        				</Border>
        				<Border BorderBrush="White" BorderThickness="1" Background="Red" Grid.Column="1">
        					<Viewbox x:Name="viewbox" Margin="0">
        						<TextBlock x:Name="textBlock2" TextWrapping="Wrap" Text="I" TextAlignment="Center" FontFamily="Segoe WP Black" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        					</Viewbox>
        				</Border>
						<Border BorderBrush="White" BorderThickness="1" Background="Red" Grid.Column="2">
        					<Viewbox Margin="0">
        						<TextBlock x:Name="textBlock3" TextWrapping="Wrap" Text="N" TextAlignment="Center" FontFamily="Segoe WP Black" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        					</Viewbox>
        				</Border>
						<Border BorderBrush="White" BorderThickness="1" Background="Red" Grid.Column="3">
        					<Viewbox Margin="0">
        						<TextBlock x:Name="textBlock4" TextWrapping="Wrap" Text="G" TextAlignment="Center" FontFamily="Segoe WP Black" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        					</Viewbox>
        				</Border>
						<Border BorderBrush="White" BorderThickness="1" Background="Red" Grid.Column="4">
        					<Viewbox Margin="0">
        						<TextBlock x:Name="textBlock5" TextWrapping="Wrap" Text="O" TextAlignment="Center" FontFamily="Segoe WP Black" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        					</Viewbox>
        				</Border>
						<Border BorderBrush="Black" BorderThickness="1" Grid.Row="1">
							<Viewbox x:Name="viewbox1">
								<TextBox TextWrapping="Wrap" FontFamily="Segoe WP" Text="17" TextAlignment="Center" BorderThickness="0" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="10,3,8,5" MinHeight="64" InputScope="Number" FontSize="48" Width="72" BorderBrush="White" Background="White"/>
							</Viewbox>
						</Border>
        			</Grid>
        		</Border>
        	</Viewbox>
        </Grid>

        <VisualStateManager.VisualStateGroups>

            <!-- Visual states reflect the application's view state -->
            <VisualStateGroup x:Name="ApplicationViewStates">
                <VisualState x:Name="FullScreenLandscape"/>
                <VisualState x:Name="Filled"/>

                <!-- The entire page respects the narrower 100-pixel margin convention for portrait -->
                <VisualState x:Name="FullScreenPortrait">
                    <Storyboard>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="backButton" Storyboard.TargetProperty="Style">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource PortraitBackButtonStyle}"/>
                        </ObjectAnimationUsingKeyFrames>
                    </Storyboard>
                </VisualState>

                <!-- The back button and title have different styles when snapped -->
                <VisualState x:Name="Snapped">
                    <Storyboard>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="backButton" Storyboard.TargetProperty="Style">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource SnappedBackButtonStyle}"/>
                        </ObjectAnimationUsingKeyFrames>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="pageTitle" Storyboard.TargetProperty="Style">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource SnappedPageHeaderTextStyle}"/>
                        </ObjectAnimationUsingKeyFrames>
                    </Storyboard>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
    </Grid>
</common:LayoutAwarePage>

